---
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title }}",
      "tags"     : [{% for tag in post.tags %}"{{ tag | remove: ',' }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
      "url"      : "{{ post.url }}",
      {% assign excerpt = post.excerpt | newline_to_br | replace: '<br />', ' ' | strip_newlines | strip_html %}
      "desc"     : "{% if post.description %}{{ post.description }}{% else %}{{ excerpt }}{% endif %}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
